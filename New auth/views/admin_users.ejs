<!doctype html>
<html>
    <head>
        <title>Node Authentication</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script>    
    
        </script>
        <style>
            body {
                font-family: 'Segoe UI';
                background-color: #d8d8d8;
            }
    
            /* navigation bar */
    
            .dropdown_link {
                color: black;
            }
    
            .dropdown_link:hover {
                color: white;
                background-color: transparent;
            }
            .navigation-bar {
                background-color: #323232; 
                color: white;
                font-family: Helvetica; 
            }
            .left-side {
                display: inline-block;
            }
            .right-side {
                float: right;
            }
            .dropdown-item:hover {
                background-color: blue;
                color: white;
                cursor: pointer;
            }
    
            /* search bar */
            .form_search{
                position: absolute;
                display: inline-block;
               
                transform: translate(-200%, 30%);
                transition: all 0.5s;
                width: 50px;
                height: 50px;
                background: white;
                box-sizing: border-box;
                border-radius: 25px;
                border: 4px solid white;
                padding: 5px;
            }

            .user {
                margin: 2%;
                padding: 1.5%;
                width: 90%;
                max-height: 100px;
                border: 1px solid black;
                box-shadow: 0px 0px 25px gray;
                border-radius: 15px;
                cursor: pointer;
            }
        </style>
        
    </head>
    <body>
        <div class="navigation-bar">
            <!--https://hookagency.com/website-color-schemes-->
            <div class="left-side">
                
                <img src="upl-1566734376984.png" width="50px" height="50px" style="margin: 15px; margin-left: 25px; margin-right: 30px">
                <span class="menu-item" style="margin-right: 15px; cursor: pointer;">Admin center</span>
                <span class="menu-item" style="margin-right: 15px; cursor: pointer;""><a href="/admin_users" style="color: white"><b>Users</b></a></span>
                <span class="menu-item" style="margin-right: 15px; cursor: pointer;""><a href="/admin_events" style="color: white">Events</a></span>
                
            </div>
            <div class="right-side dropdown">
                <span>Hi, Andrew!</span>
                <img src="<%=user.image%>" class="dropdown-toggle" data-toggle="dropdown" width="50px" height="50px" style="border-radius: 30px; margin: 15px; opacity: 1; cursor: pointer;">
                
                <div class="dropdown-menu" style="margin: 10px; text-align: center">
                    <a href="/logout" class="dropdown_link"><p class="dropdown-item">Sign out</p></a>
                </div>
            </div>
        </div>
        
        <h3 style="margin: 3%">Dashboard</h3>
        <% for (var i = 0; i < users.length; i++) { %>
            
                <center><div class="user row">
                    <div class="col-lg" style="vertical-align: middle; text-align: center">
                        <img src="./profile-default.jpg" style="border-radius: 30px; border: 1px solid gray;;" width="50px" height="50px" />
                    </div>
                    <div class="col-lg" style="vertical-align: middle; text-align: center">
                         <span style="color: gray">First name: </span><br>
                         <%=users[i].firstname%> 
                    </div>
                    <div class="col-lg" style="vertical-align: middle; text-align: center">
                            <span style="color: gray">Second name: </span><br>
                            <%=users[i].secondname%> 
                    </div>
                    <div class="col-lg" style="vertical-align: middle; text-align: center">
                            <span style="color: gray">Email: </span><br>
                        <%=users[i].email%> 
                    </div>
                    <div class="col-lg" style="vertical-align: middle; text-align: center">
                        <form action="/admin/user/<%=users[i]._id%>" method="get">
                        <button class="btn btn-success" type="submit">Modify</button>
                        </form>
                    </div>
                    <div class="col-lg" style="vertical-align: middle; text-align: center">
                        <button class="btn btn-danger">Remove</button>
                    </div>
                </div></center>
            
        <% } %>
    </body>
</html>