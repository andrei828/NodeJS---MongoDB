<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
    </style>
</head>
<body>
    <div class="row">
        <div class="col-sm-6 col-lg-6">
            <img src="jens-johnsson-oatYheJMm9E-unsplash.jpg" style="width: 80%;background-size: cover;" />
        </div>
        <div class="col-sm-6 col-lg-6" style="padding-right:180px;">
                <center><h1 style="margin-bottom: 40px; margin-top: 100px;"> Sign up here</h1></center>

                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
            
                <!-- LOGIN FORM -->
                <form action="/signup" method="post">
                    <div class="form-group">
                            <label>First Name</label>
                            <input type="text" style="border: 1px solid black" class="form-control" name="firstname">
                        </div>
                        <div class="form-group">
                            <label>Second Name</label>
                            <input type="text" style="border: 1px solid black" class="form-control" name="secondname">
                        </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" style="border: 1px solid black" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" style="border: 1px solid black" class="form-control" name="password">
                    </div>
                    <center><button type="submit" class="btn btn-primary btn-lg">Signup</button></center>
                </form>
            
                <hr>
            
                <p>Already have an account? <a href="/login">Login</a></p>
                <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>

</body>
</html>
