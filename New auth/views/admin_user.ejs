<!doctype html>
<html>
    <head>
        <title>Node Authentication</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script>    
            
        </script>
        <style>
            body {
                font-family: 'Segoe UI';
                background-color: #d8d8d8;
            }
    
            /* navigation bar */
    
            .dropdown_link {
                color: black;
            }
    
            .dropdown_link:hover {
                color: white;
                background-color: transparent;
            }
            .navigation-bar {
                background-color: #323232; 
                color: white;
                font-family: Helvetica; 
            }
            .left-side {
                display: inline-block;
            }
            .right-side {
                float: right;
            }
            .dropdown-item:hover {
                background-color: blue;
                color: white;
                cursor: pointer;
            }
    
            /* search bar */
            .form_search{
                position: absolute;
                display: inline-block;
               
                transform: translate(-200%, 30%);
                transition: all 0.5s;
                width: 50px;
                height: 50px;
                background: white;
                box-sizing: border-box;
                border-radius: 25px;
                border: 4px solid white;
                padding: 5px;
            }

            .user {
                margin: 2%;
                padding: 1.5%;
                width: 90%;
                
                border: 1px solid black;
                box-shadow: 0px 0px 25px gray;
                border-radius: 15px;
                cursor: pointer;
            }
        </style>
        
    </head>
    <body>
        <div class="navigation-bar">
            <!--https://hookagency.com/website-color-schemes-->
            <div class="left-side">
                
                <img src="../../upl-1566734376984.png" width="50px" height="50px" style="margin: 15px; margin-left: 25px; margin-right: 30px">
                <span class="menu-item" style="margin-right: 15px; cursor: pointer;">Admin center</span>
                <span class="menu-item" style="margin-right: 15px; cursor: pointer;""><a href="/admin_users" style="color: white"><b>Users</b></a></span>
                <span class="menu-item" style="margin-right: 15px; cursor: pointer;""><a href="/admin_events" style="color: white">Events</a></span>
                
            </div>
            <div class="right-side dropdown">
                <span>Hi, Andrew!</span>
                <img src="../../profile-default.jpg" class="dropdown-toggle" data-toggle="dropdown" width="50px" height="50px" style="border-radius: 30px; margin: 15px; opacity: 1; cursor: pointer;">
                
                <div class="dropdown-menu" style="margin: 10px; text-align: center">
                    <a href="/logout" class="dropdown_link"><p class="dropdown-item">Sign out</p></a>
                </div>
            </div>
        </div>
        
        <h3 style="margin: 3%; margin-bottom: 2%;">Dashboard</h3>
        <div class="row">
            <div class="col-lg" style="text-align: center">
            <form action="/admin/user/<%=user._id%>/set-firstname" method="post" style="margin: 5%;">
                    <label>First name:</label>
                    <input type="text" style="text-align: center; background: transparent; border: 1px solid #323232; display: inline" class="form-control" name="firstname" value="<%=user.firstname%>">
            </form>
            </div>

            <div class="col-lg" style="text-align: center">
            <form action="/admin/user/<%=user._id%>/set-secondname" method="post" style="margin: 5%;">
                <div class="form-group">
                    <label>Second name:</label>
                    <input type="text" style="text-align: center; background: transparent; border: 1px solid #323232;  display: inline" class="form-control" name="secondname" value="<%=user.secondname%>">
                </div>
            </form>
            </div>
            <div class="col-lg" style="text-align: center">
                <form action="/admin/user/<%=user._id%>/set-email" method="post" style="margin: 5%;">
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="text" style="text-align: center; background: transparent; border: 1px solid #323232;  display: inline" class="form-control" name="email" value="<%=user.email%>">
                    </div>
                </form>
            </div>
        </div>
        
        <h2 style="margin: 1%; margin-top:2%; margin-left:2%"><%= user.firstname %>'s events</h2>
        <% for (var i = 0; i < events.length; i++) { %>
            
            <center><div class="user row">
                <div class="col-lg" style="vertical-align: middle; text-align: center">
                    <img src="../../<%=events[i].image1%>" style="border-radius: 15px; border: 1px solid gray;" width="150px" height="100px" />
                </div>
                <div class="col-lg" style="position: relative;vertical-align: middle; text-align: center">
                        <span style="color: gray">Name: </span><br>
                        <%=events[i].name%> 
                </div>
                <div class="col-lg" style="vertical-align: middle; text-align: center">
                        <span style="color: gray">City: </span><br>
                        <%=events[i].city%> 
                </div>
                <div class="col-lg" style="vertical-align: middle; text-align: center">
                        <span style="color: gray">Location: </span><br>
                    <%=events[i].location%> 
                </div>
                <div class="col-lg" style="vertical-align: middle; text-align: center">
                    <form  action="/admin/user/<%=user._id%>/<%=events[i]._id%>" method="post">
                        <button class="btn btn-danger">Restrict access</button>
                    </form>
                </div>
            </div></center>
            
        <% } %>
        <% if (!events.length) { %>
            <p style="margin-left: 5%;"> No events yet...</p>
        <% } %>
    </body>
</html>